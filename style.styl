.docmenu
  background transparent
  height auto
  .menu
    height auto
    &.sub-menu
      margin-left 5px
    li
      background $stable
      a
        &.menu-active
          font-weight bold
          +.menu-content
            max-height 500px
            transform translate3d(0, 0, 0)
            display block
        padding 15px
        display block
        color $positive
        text-decoration none
      .menu-content
        max-height 0
        transition-duration .50s
        transform translate3d(-100%, 0, 0)
